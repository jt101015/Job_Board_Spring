<html>
  <head>
    <title>Job Description Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="/angularjs/ng-file-upload.min.js"></script>
    <script src="/angularjs/companyApplicationAngularJS.js"></script>
  </head>
  <style>
      #header {
	        margin: 0px 10%;
	        padding: 0;
	        height: 8%;
	        width: 80%;
            border-bottom:2px solid #D3D3D3;
        }
      #header .title {
            position: relative;
            text-align: left;
            color:	#696969;
            top: 20px;
            font-family:"Times New Roman", Times, serif;
            font-size:20px;
        }
      #container{
          width:80%;
          top:30px;
          margin: 0px 10%;
      }
      ul {
          float: left;
          margin-left: 0;
          padding-left: 0;
          width: 20%;
          list-style-type: none;
      }

      ul a{
          display: block;
          width: 200px;
          text-align: center;
          height: 40px;
          line-height: 40px;
          background: #f8f8f8;
        }
      ul .active a, ul a:hover{
          background: #000080;
          color: #ffffff;
      }
      p{ word-break:break-all; }

      #right {
          position: relative;
          float: right;
          top:50px;
          left:50px;
          margin-right: 0;
          padding-right: 0;
          width: 20%;
          text-align: left;
      }
      #center {
          position: relative;
          top: 50px;
          margin: 0 auto;
          width:60%;

      }
      th {color:	#696969;}
      td {color:	#696969;}

      #submittedImage {

          width: 40%;
          height: auto;
          border-color: #ffffff;

      }



  </style>
  <body>
      <div ng-app="companyApplication" ng-controller="myCtrl">
          <div id="header">
              <p class = "title">Job Description
              <a class="btn btn-primary" style = "float: right;" ng-click="signOut()">Sign Out</a>
              <a class="btn btn-primary" style = "float: right;" ng-click="back()"> &nbsp;Back&nbsp;</a>
              </p>
          </div>
          <div id="container">
              
              <table class="table table-striped table-hover">
                   <tr><th><div >Application Detail</div></th> 
                       
                       <th>&nbsp;</th><th>&nbsp;</th><th>&nbsp;</th>

                        <th>&nbsp;</th>
                  </tr>
                   <tr> 
                       <td rowspan="7" valign="top" width = "20%">
                           <img src= <%= application.seeker.picture %> width="150px" height="150px"/>
                       </td>
                       <td width = "15%">First Name:</td>
                       <td width = "25%"><%= application.seeker.firstname %></td>
                       <td width = "15%">Last Name:</td>
                       <td width = "25%"><%= application.seeker.lastname %></td>
                   </tr>
                   <tr>
                       <td>Self Introduction:</td>
                       <td colspan = "3">
                           <%= application.seeker.selfIntroduction %>
                       </td>
                   </tr>
                   <tr>
                       <td>Work Experience:</td>
                       <td colspan = "3">
                           <%= application.seeker.workExperience %>
                       </td>
                   </tr>
                   <tr>
                       <td>Education:</td>
                       <td colspan = "3">
                           <%= application.seeker.education %>
                       </td>
                   </tr>
                   <tr>
                       <td>Skills:</td>
                       <td colspan = "3">
                           <%= application.seeker.skills %>
                       </td>
                   </tr>
                   <% if (application.fileName) { %>
                       <tr>
                           <td>Resume File:</td>
                           <td colspan = "3">
                               <a href = '/file/download<%= application.fileURL %>/<%= application.fileName %>'><%= application.fileName %></a>
                           </td>
                       </tr>
                   <% } %>
                   <% if ("Pending" == application.status) { %>
                           <tr>
                               <td colspan = "4" style = "text-align: left">
                                   <a class="btn btn-primary" style = "float: left;" ng-click="accept('<%= application.id %>')">Accept</a>
                                   <a class="btn btn-primary" style = "float: left;" ng-click="reject('<%= application.id %>')">Reject</a>
                               </td>
                               
                           </tr>
                    <% } %>
              </table>

          </div>
     </div>
  </body>
</html>
